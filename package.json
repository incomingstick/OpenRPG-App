{
  "name": "openrpg",
  "version": "0.5.1",
  "description": "A tool for someone to use to quickly create content for a tabletop RPG world",
  "scripts": {
    "start": "electron-webpack dev --hot",
    "lint": "eslint \"src/**/*\" --fix",
    "test": "echo \"mocha -r ts-node/register src/test/**/*-test.ts\"",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx,md,css,scss,sass,json}\" !src/static/** !tmp/**",
    "pretty-quick": "pretty-quick --staged",
    "typecheck": "tsc --pretty --noEmit",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder",
    "dist:dir": "npm run compile && electron-builder --dir -c.compression=store -c.mac.identity=null",
    "release": "npm run compile && electron-builder -p always"
  },
  "electronWebpack": {
    "commonSourceDirectory": "src/common",
    "title": "OpenRPG",
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": "src/renderer"
    }
  },
  "build": {
    "appId": "com.openrpg.app",
    "productName": "OpenRPG",
    "copyright": "Copyright Â© 2019 ${author}",
    "directories": {
      "buildResources": "static/"
    },
    "publish": {
      "provider": "github",
      "owner": "incomingstick",
      "repo": "OpenRPG-App"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/incomingstick/OpenRPG-App",
    "ssh": "git+ssh://git@github.com:incomingstick/OpenRPG-App.git"
  },
  "license": "OSL",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/incomingstick"
  },
  "author": {
    "name": "Nick Gaulke",
    "url": "https://github.com/incomingstick",
    "email": "incomingstick@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/incomingstick/OpenRPG-App/issues"
  },
  "homepage": "https://openrpg.io",
  "website": {
    "url": "https://openrpg.io",
    "blog": "https://blog.openrpg.io",
    "docs": "https://openrpg.io/documentation/introduction/"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "async": "^3.2.3",
    "electron-fetch": "^1.7.4",
    "electron-log": "^3.0.9",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.6.5",
    "es6-promisify": "^6.1.1",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.21",
    "mkpath": "^1.0.0",
    "moment": "^2.29.1",
    "openrpg-libs": "^0.5.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-hot-loader": "^4.13.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "source-map-support": "^0.5.21",
    "tslib": "^1.14.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/async": "^3.2.12",
    "@types/electron-settings": "^3.1.2",
    "@types/jquery": "^3.5.14",
    "@types/lodash": "^4.14.180",
    "@types/markdown-it": "0.0.9",
    "@types/mkpath": "^0.1.29",
    "@types/react": "^16.14.24",
    "@types/react-dom": "^16.9.14",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "clean-webpack-plugin": "^3.0.0",
    "electron": "6.1.7",
    "electron-builder": "^22.14.13",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "eslint": "^6.8.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "handlebars": "^4.7.7",
    "highlight.js": "^9.18.5",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^6.0.0",
    "markdown-it": "^10.0.0",
    "markdown-loader": "^5.1.0",
    "node-sass": "^4.14.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "raw-loader": "^3.1.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "tslint": "^5.20.1",
    "typescript": "^3.9.10",
    "webpack": "^4.46.0"
  }
}
